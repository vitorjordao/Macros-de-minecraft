$${
if(sword1);
log("&9Up mob IZI &4[OFF]");
log(&4Feita por &cMortasius);
keyup(sneak);
unset(sword1);
stop();
else;
log("&9Up mob IZI &2[ON]");
log(&4Feita por &cMortasius);
log(&eEssa macro e uma modificacao da macro &c>>&6Matar mobs&c<<);
set(sword1);
prompt(#dur,$$?,Durabilidade que deseja trocar a espada);
prompt(#tempo,$$?,Tempo para hitar o mob em MS);
echo("/pvp off");
&dir = %DIRECTION%;
#un=1;
ifmatches(%&dir%,N);&dir=NORTH;endif;
ifmatches(%&dir%,S);&dir=SOUTH;endif;
ifmatches(%&dir%,E);&dir=EAST;endif;
ifmatches(%&dir%,W);&dir=WEST;endif;
do;  
if(%DURABILITY%<%#dur%);
if(%#un%=9);
log("&9Up mob IZI &4[OFF]");
log(&4Feita por &cMortasius);
unset(sword1);
stop();
endif;
log("&3[&4!&3]&5Trocando de espadas!");
inventoryup(1);
wait(500ms);         
endif;
do(1);
keydown(sneak);
look(%&dir%);
look(,-20);
wait(%#tempo% ms);
if(%HIT%="ENTITY");
key(attack);
endif;
loop;
loop;
endif;
}$$
